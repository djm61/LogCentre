{
  "ConnectionStrings": {
    "ConnectionString": "EMPTY_VALUE"
  },
  "BasicAuthSettings": {
    "BasicAuthUsername": "EMPTY_VALUE",
    "BasicAuthPassword": "EMPTY_VALUE"
  },
  "CachingSettings": {
    "Enabled": "True",
    "CacheType": "Memory",
    "SlidingExpiration": "300",
    "AbsoluteExpiration": "600",
    "ConnectionString": "localhost:6379"
  },
  "BackgroundServiceSettings": {
    "Enabled": "EMPTY_VALUE",
    "UpdateInterval": "EMPTY_VALUE" //10 minutes in milliseconds is 3600000
  },
  "SwaggerSettings": {
    "Endpoint": "swagger/v2/swagger.json",
    "Version": "v2",
    "Title": "Log Centre Service API",
    "Description": "Log Centre Service Api",
    "TermsOfServiceUrl": "",
    "ContactName": "",
    "ContactEmail": "",
    "ContactUrl": "",
    "LicenseName": "",
    "LicenseUrl": ""
  },
  "ApiVersioningSettings": {
    "ReportApiVersions": "True",
    "AssumeDefaultVersionWhenUnspecified": "True",
    "MajorVersion": "1",
    "MinorVersion": "0",
    "HeaderApiVersionName": "x-api-version"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "SeriLog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "LogCentre.Services": "Debug",
        "LogCentre.Data": "Debug",
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Debug",
        "Default": "Information",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:/ProgramData/LogCentre/local/LogCentre.Api-.log",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "fileSizeLimitBytes": 10485760, //10mb
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
                "shared": true,
                "flushToDiskInterval": "1"
              }
            }
          ]
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
