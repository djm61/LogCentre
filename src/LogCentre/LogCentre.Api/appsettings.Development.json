{
  "ConnectionStrings": {
    "ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=LogCentre-local;Trusted_Connection=True;MultipleActiveResultSets=true;App=LogCentre"
  },
  "BasicAuthSettings": {
    "BasicAuthUsername": "test",
    "BasicAuthPassword": "test"
  },
  "CachingSettings": {
    "Enabled": "True",
    "CacheType": "Memory",
    "SlidingExpiration": "300",
    "AbsoluteExpiration": "600",
    "ConnectionString": "localhost:6379"
  },
  "BackgroundServiceSettings": {
    "Enabled": "True",
    "UpdateInterval": "60000" //1 minute in milliseconds - DEV only
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "SeriLog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "LogCentre.Services": "Debug",
        "LogCentre.Data": "Debug",
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Debug",
        "Default": "Debug",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:/ProgramData/LogCentre/local/LogCentre.Api-.log",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "fileSizeLimitBytes": 10485760, //10mb
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
                "shared": true,
                "flushToDiskInterval": "1"
              }
            }
          ]
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
