@using LogCentre.Model.Search

@model IEnumerable<SearchResultModel>

<div class="table-responsive">
    <table id="tblResult">
        <caption>Search Results</caption>
        <thead>
            <tr>
                <th>Date</th>
                <th>Level</th>
                <th>Source</th>
                <th>Line</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                var file = string.Empty;
                @foreach (var line in Model)
                {
                    if (file != line.FileModel.Name)
                    {
                        file = line.FileModel.Name;
                        var fullPath = System.IO.Path.Combine(line.FileModel.LogSource.Path, line.FileModel.Name);
                        <tr>
                            <td colspan="4"><strong>@fullPath</strong></td>
                        </tr>
                    }
                    <tr>
                        <td>@line.LogDate.ToString("yyyy-MM-dd HH:mm:ss.fff")</td>
                        <td>@line.Level</td>
                        <td>@line.Source</td>
                        <td>@line.LogLine</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>